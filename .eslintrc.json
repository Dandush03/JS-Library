{  
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "eslintIgnore": ["stylelint.config.js"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off"
  }
}

